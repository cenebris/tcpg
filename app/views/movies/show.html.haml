- binding.pry
%h1= movie.title
.jumbotron
  .container
    .row.alert.alert-info
      = movie.description
    .row
      %h2.text-center The Movie DB Data:
      .col-md-6
        %h3 Plot Overview:
        = movie.tmdb_overview
        %h3 Average Rating:
        = movie.tmdb_vote_average
      .col-md-6
        = image_tag movie.tmdb_poster, class: 'img-thumbnail'

- if user_signed_in?
  %p= link_to 'Email me details about this movie', send_info_movie_path(movie), class: 'btn btn-sm btn-default'
